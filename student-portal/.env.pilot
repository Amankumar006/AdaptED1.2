# Pilot Environment Configuration
VITE_API_BASE_URL=https://pilot-api.enhanced-edu.com/api
VITE_NODE_ENV=pilot

# Authentication
VITE_JWT_SECRET=pilot-jwt-secret-key-2024

# OAuth Providers (Pilot)
VITE_GOOGLE_CLIENT_ID=pilot-google-client-id
VITE_MICROSOFT_CLIENT_ID=pilot-microsoft-client-id

# Feature Flags for Pilot
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_PILOT_FEATURES=true
VITE_ENABLE_FEEDBACK_COLLECTION=true
VITE_ENABLE_USAGE_ANALYTICS=true

# Analytics & Monitoring
VITE_ANALYTICS_ID=pilot-analytics-id
VITE_PILOT_COHORT_ID=cohort-2024-pilot
VITE_FEEDBACK_API_URL=https://pilot-feedback.enhanced-edu.com/api

# BuddyAI Configuration
VITE_BUDDYAI_API_URL=https://pilot-ai.enhanced-edu.com/api
VITE_BUDDYAI_SAFETY_MODE=strict
VITE_BUDDYAI_ESCALATION_ENABLED=true

# Learning Analytics
VITE_LEARNING_ANALYTICS_URL=https://pilot-analytics.enhanced-edu.com/api
VITE_REAL_TIME_TRACKING=true

# Pilot Specific Settings
VITE_PILOT_START_DATE=2024-11-01
VITE_PILOT_END_DATE=2024-12-31
VITE_PILOT_FEEDBACK_INTERVAL=7
VITE_PILOT_SURVEY_ENABLED=true

# Debug and Logging
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
VITE_PILOT_LOGGING=true
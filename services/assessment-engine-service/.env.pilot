# Pilot Environment Configuration
NODE_ENV=pilot
PORT=3003
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=assessment_engine_pilot
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=7001
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=pilot_jwt_secret_change_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,text/plain

# Code Execution Configuration
CODE_EXECUTION_ENABLED=true
CODE_EXECUTION_TIMEOUT=30000
SANDBOX_URL=http://localhost:8080

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=3003
PROMETHEUS_ENABLED=true

# Pilot-specific Configuration
PILOT_MODE=true
PILOT_COHORT_SIZE=50
PILOT_DURATION_DAYS=30
PILOT_FEEDBACK_ENABLED=true

# Server Configuration
PORT=3006
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Provider API Keys (using test keys for development)
OPENAI_API_KEY=sk-test-key-not-configured
ANTHROPIC_API_KEY=sk-ant-test-key-not-configured
GOOGLE_AI_API_KEY=test-key-not-configured

# Content Filtering
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true

# Caching Configuration
RESPONSE_CACHE_TTL=3600
CONVERSATION_CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ai-service.log

# Safety and Compliance
AGE_VERIFICATION_REQUIRED=true
ESCALATION_THRESHOLD=0.8
HUMAN_TEACHER_ESCALATION_ENABLED=true

# Model Configuration
DEFAULT_MODEL_PROVIDER=openai
DEFAULT_MODEL_NAME=gpt-3.5-turbo
MAX_TOKENS=2048
TEMPERATURE=0.7

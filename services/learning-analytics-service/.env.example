PREDICTION_CONFIDENCE_THRESHOLD=0.7
RECOMMENDATION_LIMIT=10

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001

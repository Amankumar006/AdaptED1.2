NODE_ENV=development
PORT=3003

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin_password@localhost:27017/content_management?authSource=admin
MONGODB_DB_NAME=content_management

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (using local storage for dev)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
S3_BUCKET_NAME=educational-platform-content-dev

# JWT Configuration
JWT_SECRET=dev-super-secret-access-token-key-for-testing

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,application/zip

# Video Processing Configuration
FFMPEG_PATH=/usr/local/bin/ffmpeg
VIDEO_QUALITY_LEVELS=240p,360p,480p,720p,1080p

# Content Processing
CONTENT_CACHE_TTL=3600
MAX_CONTENT_SIZE=500MB

# API Configuration
API_RATE_LIMIT=1000
API_WINDOW_MS=900000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# OpenTelemetry Configuration
ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
